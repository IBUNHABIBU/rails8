<%= form_with model: product do |form| %>
     <div class="flex flex-col gap-half mbe-4">
    <%= form.label :name, class: "text-sm font-medium leading-none" %>
    <%= form.text_field :name, class: "input" %>
  </div>


  <div>
    <%= form.label :featured_image, style: "display: block" %>
    <%= form.file_field :featured_image, accept: "image/*" %>
  </div>
  <div class="flex flex-col gap-half mbe-4">
  <%= form.label :description, class: "text-sm font-medium leading-none" %>
  <%= form.textarea :description, rows: "auto", class: "input" %>
</div>

<div class="inline-flex items-center mbs-2 mie-1">
  <%= form.submit class: "btn btn--primary" %>
</div>
  
<% end %>
  