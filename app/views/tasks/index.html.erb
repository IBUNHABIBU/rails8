<% if notice.present? %>
  <div popover class="flash" style="--flash-position: 5rem;" data-controller="element-removal" data-action="animationend->element-removal#remove" role="alert"><%= notice %></div>
<% end %>

<% content_for :title, "Tasks" %>

<div class="flex items-center justify-between mbe-4">
  <h1 class="font-bold text-4xl">Tasks</h1>
  <%= link_to "New task", new_task_path, class: "btn btn--primary" %>
</div>
<%= debug @inprogres_tasks.empty? && @completed_tasks.empty? %>
<%= debug @inprogres_tasks.empty? && @completed_tasks.empty? %>
<% if  @inprogres_tasks.empty? && @completed_tasks.empty? %>
      <h4> No tasks </h4>
<% else %>

<div id="tasks" class="flex flex-col" style="gap: 2rem;">
    <div class="flex flex-col items-start gap">
      <h3>In Progress</h3>
      <%= render tasks/task, collection: @inprogres_tasks %>
    </div>

    <div class="flex flex-col items-start gap">
    <h3>Completed</h3>
    <%= render tasks/task, collection: @completed_tasks %>
  </div>
</div>

<% end %>